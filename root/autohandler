<%method title>overview</%method>
<%shared>
sub pass_args {
	my @keys = @_;

	my %_args = $m->request_args();
	my %pass = ();
	foreach my $k (@keys) {
		$pass{$k} = $_args{$k};
	}

	return %pass;
}
</%shared>

